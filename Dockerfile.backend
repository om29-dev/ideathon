# Backend Dockerfile
FROM python:3.9-slim

WORKDIR /app

# Copy requirements
COPY backend/requirements.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend source
COPY backend/ ./

# Create Data directory
RUN mkdir -p Data

EXPOSE 8000

# Start the FastAPI server
CMD ["python", "main.py"]
